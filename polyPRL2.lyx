\begin_layout Standard
\begin_inset Formula $\underline{\text{Asymptotique de }\Delta(i\omega_{n})}:$
\end_inset

 On souligne ici l'importance de normaliser la somme sur 
\begin_inset Formula $\mathbf{k}$
\end_inset

.
 Regardons par exemple la première étape de l'algorithme DMFT.
 Comme on part avec 
\begin_inset Formula $\Sigma_{imp}=0$
\end_inset

, on a 
\begin_inset Formula 
\[
\Delta(i\omega_{n})=i\omega_{n}+\mu-\left(\frac{1}{n_{\mathbf{k}}}\sum_{\mathbf{k}}\frac{1}{i\omega_{n}+\mu-\varepsilon_{\mathbf{k}}}\right)^{-1}
\]

\end_inset

Et on veut une égalité du type :
\begin_inset Formula 
\[
i\omega_{n}+\mu-\left(\frac{1}{n_{\mathbf{k}}}\sum_{\mathbf{k}}\frac{1}{i\omega_{n}+\mu-\varepsilon_{\mathbf{k}}}\right)^{-1}=\sum_{l}\frac{|V_{l}|^{2}}{i\omega_{n}-\tilde{\varepsilon_{l}}}
\]

\end_inset

On a :
\begin_inset Formula 
\begin{align*}
\frac{1}{n_{\mathbf{k}}}\sum_{\mathbf{k}}\frac{1}{i\omega_{n}+\mu-\varepsilon_{\mathbf{k}}} & =\frac{1}{i\omega_{n}}\frac{1}{n_{\mathbf{k}}}\sum_{\mathbf{k}}\frac{1}{1+\frac{\mu-\varepsilon_{\mathbf{k}}}{i\omega_{n}}}\\
 & =\frac{1}{i\omega_{n}}\frac{1}{n_{\mathbf{k}}}\sum_{\mathbf{k}}\left(1-\frac{\mu-\varepsilon_{\mathbf{k}}}{i\omega_{n}}+\left(\frac{\mu-\varepsilon_{\mathbf{k}}}{i\omega_{n}}\right)^{2}+\mathcal{O}\left(\frac{1}{\left(i\omega_{n}\right)^{3}}\right)\right)\\
 & =\frac{1}{i\omega_{n}}\left(1-\frac{\mu}{i\omega_{n}}+\frac{1}{n_{\mathbf{k}}}\sum_{\mathbf{k}}\left(\frac{\mu-\varepsilon_{\mathbf{k}}}{i\omega_{n}}\right)^{2}+\mathcal{O}\left(\frac{1}{\left(i\omega_{n}\right)^{3}}\right)\right)
\end{align*}

\end_inset

Où on a utilisé 
\begin_inset Formula $\sum_{\mathbf{k}}\varepsilon_{\mathbf{k}}=0$
\end_inset

.
 On développe séparement :
\begin_inset Formula 
\[
\frac{1}{n_{\mathbf{k}}}\sum_{\mathbf{k}}\left(\frac{\mu-\varepsilon_{\mathbf{k}}}{i\omega_{n}}\right)^{2}=\frac{1}{(i\omega_{n})^{2}}\sum_{\mathbf{k}}\left(\mu^{2}-2\mu\varepsilon_{\mathbf{k}}+\varepsilon_{\mathbf{k}}^{2}\right)=\frac{1}{(i\omega_{n})^{2}}\left(\mu^{2}+\sum_{\mathbf{k}}\varepsilon_{\mathbf{k}}^{2}\right)
\]

\end_inset

Et il n'est pas dur de voir que : 
\begin_inset Formula 
\[
\frac{1}{n_{\mathbf{k}}}\sum_{\mathbf{k}}\varepsilon_{\mathbf{k}}^{2}=\frac{1}{n_{\mathbf{k}}}\left(2t\right)^{2}\sum_{0\leq\alpha_{i}<p_{i}}\left[\cos^{2}\left(\frac{2\pi\alpha_{1}}{p_{1}}\right)+\cos^{2}\left(\frac{2\pi\alpha_{2}}{p_{2}}\right)+\cos^{2}\left(\frac{2\pi\alpha_{3}}{p_{3}}\right)\right]
\]

\end_inset

Donc 
\begin_inset Formula 
\[
\frac{1}{n_{\mathbf{k}}}\sum_{\mathbf{k}}\varepsilon_{\mathbf{k}}^{2}=\frac{1}{n_{\mathbf{k}}}4t^{2}\left(p_{2}p_{3}\sum_{0\leq\alpha_{1}<p_{1}}\cos^{2}\left(\frac{2\pi\alpha_{1}}{p_{1}}\right)+p_{1}p_{3}\sum_{0\leq\alpha_{2}<p_{2}}\cos^{2}\left(\frac{2\pi\alpha_{2}}{p_{2}}\right)+p_{1}p_{2}\sum_{0\leq\alpha_{3}<p_{3}}\cos^{2}\left(\frac{2\pi\alpha_{3}}{p_{3}}\right)\right)
\]

\end_inset

Mais 
\begin_inset Formula 
\[
\cos^{2}\left(\frac{2\pi\alpha_{i}}{p_{i}}\right)=\frac{\cos\left(\frac{4\pi\alpha_{i}}{p_{i}}\right)+1}{2}
\]

\end_inset

Donc 
\begin_inset Formula 
\[
\sum_{0\leq\alpha_{i}<p_{i}}\cos^{2}\left(\frac{2\pi\alpha_{i}}{p_{i}}\right)=\sum_{0\leq\alpha_{i}<p_{i}}\frac{\cos\left(\frac{4\pi\alpha_{i}}{p_{i}}\right)+1}{2}=\frac{1}{2}\sum_{0\leq\alpha_{i}<p_{i}}\cos\left(\frac{4\pi\alpha_{i}}{p_{i}}\right)+\frac{p_{i}}{2}=\frac{p_{i}}{2}
\]

\end_inset

Donc 
\begin_inset Formula 
\[
\frac{1}{n_{\mathbf{k}}}\sum_{\mathbf{k}}\varepsilon_{\mathbf{k}}^{2}=\frac{1}{n_{\mathbf{k}}}4t^{2}\frac{3}{2}p_{1}p_{2}p_{3}=\frac{1}{n_{\mathbf{k}}}6p_{1}p_{2}p_{3}t^{2}
\]

\end_inset

Or 
\begin_inset Formula $n_{\mathbf{k}}=p_{1}p_{2}p_{3}$
\end_inset

.
 Donc :
\begin_inset Formula 
\[
\frac{1}{n_{\mathbf{k}}}\sum_{\mathbf{k}}\varepsilon_{\mathbf{k}}^{2}=6t^{2}
\]

\end_inset


\begin_inset Formula 
\[
\sum_{\mathbf{k}}\frac{1}{i\omega_{n}+\mu-\varepsilon_{\mathbf{k}}}=\frac{1}{i\omega_{n}}\left(1-\frac{\mu}{i\omega_{n}}+\frac{1}{(i\omega_{n})^{2}}\left(\mu^{2}+6t^{2}\right)+\mathcal{O}\left(\frac{1}{\left(i\omega_{n}\right)^{3}}\right)\right)
\]

\end_inset


\begin_inset Formula 
\begin{align*}
\left(\frac{1}{n_{\mathbf{k}}}\sum_{\mathbf{k}}\frac{1}{i\omega_{n}+\mu-\varepsilon_{\mathbf{k}}}\right)^{-1} & =i\omega_{n}\frac{1}{1-\frac{\mu}{i\omega_{n}}+\frac{1}{(i\omega_{n})^{2}}\left(\mu^{2}+6t^{2}\right)+\mathcal{O}\left(\frac{1}{\left(i\omega_{n}\right)^{3}}\right)}\\
 & =i\omega_{n}\left(1+\frac{\mu}{i\omega_{n}}-\frac{1}{(i\omega_{n})^{2}}\left(\mu^{2}+6t^{2}\right)+\frac{\mu^{2}}{(i\omega_{n})^{2}}+\mathcal{O}\left(\frac{1}{\left(i\omega_{n}\right)^{3}}\right)\right)
\end{align*}

\end_inset

 C'est à dire que : 
\begin_inset Formula 
\[
\Delta(i\omega_{n})=\frac{6t^{2}}{i\omega_{n}}+\mathcal{O}\left(\frac{1}{\left(i\omega_{n}\right)^{2}}\right)
\]

\end_inset

Dans le cas général, c'est à dire 
